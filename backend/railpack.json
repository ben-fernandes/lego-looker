{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": ["npm ci"]
    },
    "generate-prisma-client": {
      "inputs": [{ "step": "install" }],
      "commands": ["npm run generate-prisma-client"]
    },
    "build": {
      "inputs": [{ "step": "generate-prisma-client" }],
      "commands": ["npm run build"]
    }
  },
  "deploy": {
    "startCommand": "npm run start"
  }
}